    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Button HorizontalOptions="End" Text="EN" WidthRequest="60" BackgroundColor="Transparent" Clicked="EnglishButton_Clicked"></Button>
            <Button HorizontalOptions="End" Text="TR" WidthRequest="60" BackgroundColor="Transparent" Clicked="TurkishButton_Clicked"></Button>

        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout Padding="30" >
        <!-- Place new controls here -->


        <Button x:Name="AddRecipebutton" Command="{Binding NavigateToAddRecipesPage}" 
                HeightRequest="50" VerticalOptions="EndAndExpand"
                WidthRequest="50" 
                BorderRadius="20"
                BackgroundColor="LightBlue"
                TextColor="White"/>
        <Button x:Name="SearchRecipeButton" Command="{Binding NavigateToRecipeSearchPage}" 
                BorderRadius="20"   VerticalOptions="End"
                BackgroundColor="LightBlue"
                TextColor="White"/>

        
    </StackLayout>

</ContentPage>
